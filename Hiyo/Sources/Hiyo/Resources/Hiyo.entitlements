<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- App Sandbox - Required for App Store and security -->
    <key>com.apple.security.app-sandbox</key>
    <true/>
    
    <!-- File Access - User-selected files only (exports/imports) -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>
    
    <!-- Downloads folder access for model caching -->
    <key>com.apple.security.files.downloads.read-write</key>
    <true/>
    
    <!-- Application Support for model storage -->
    <key>com.apple.security.application-groups</key>
    <array>
        <string>ai.hiyo.mac</string>
    </array>
    
    <!-- No network client entitlement - MLX is local only -->
    <!-- We don't need com.apple.security.network.client -->
    
    <!-- Hardened Runtime - Prevent code injection -->
    <key>com.apple.security.cs.allow-jit</key>
    <false/>
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <false/>
    <key>com.apple.security.cs.disable-library-validation</key>
    <false/>
    <key>com.apple.security.cs.debugger</key>
    <false/>
    
    <!-- Disable dangerous entitlements -->
    <key>com.apple.security.automation.apple-events</key>
    <false/>
    <key>com.apple.security.temporary-exception.mach-lookup.global-name</key>
    <array/>
    
    <!-- No iCloud entitlements -->
    <!-- No push notification entitlements -->
    <!-- No camera/microphone entitlements -->
    <!-- No location services -->
    <!-- No Bluetooth -->
    
    <!-- Keychain access for encryption keys -->
    <key>keychain-access-groups</key>
    <array>
        <string>ai.hiyo.mac</string>
    </array>
</dict>
</plist>
